---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import PostContent from '../../components/molecules/PostContent'
import AuthorBio from '../../components/molecules/AuthorBio'

export async function getStaticPaths() {
	const isProd = import.meta.env.PROD;

	return (await getCollection('blog')).reduce((filteredPosts, post) => {
		const {isDraft} = post.data;

		// IS not production.
		// OR is production and not a draft post.
		if (!isProd || (isProd && !isDraft)) {
			filteredPosts.push({
				params: { slug: post.slug },
				props: post,
			});
		}

		return filteredPosts;
	}, []);
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data} slug={post.slug}>
	<PostContent>
		<Content />
		<AuthorBio />
	</PostContent>
</BlogPost>
