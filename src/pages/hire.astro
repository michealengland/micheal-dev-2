---
import LandingPage from '../layouts/LandingPage/index.astro'
import Brands from '../components/hire/Brands/index.astro'
import Education from '../components/hire/Education/index.astro'
import Intro from '../components/hire/Intro/index.astro'
import MessagesQA from '../components/hire/MessagesQA/index.astro'
import CTA from '../components/hire/CTA/index.astro'
import Reviews from '../components/hire/Reviews/index.astro'
import Skills from '../components/hire/Skills/index.astro'

const brands = [
	{
		title: 'WP Forms',
		summary: 'I worked on various brand teams at Awesome Motive including WP Forms rebuilding their site with Gutenberg blocks.',
	},
	{
		title: 'Kinsta',
		summary: 'I worked on the MyKinsta dashboard and became a development team lead.',
	},
	{
		title: 'WSJ',
		summary: 'As part of an specialized team, we released critical features for the news room authors to write and draft articles at record pace.',
	},
	{
		title: 'MarketWatch',
		summary: 'I helped the MarketWatch team incorporate custom React components and block features such as a ticker inserter for the content editor.',
	},
	{
		title: 'Bill of Rights',
		summary: 'On this Next.js project, I helped build headless WordPress site that converted block grammar into a React frontend.',
	},
]
---
<LandingPage>
	<Intro />
	<Skills />
	<Reviews />
	<Brands title="Brands I've worked with" data={brands} />
	<Education />
	<CTA
		title="What are you waiting for?"
		content="Let's start the discussion, message me on LinkedIn or continue scrolling to learn more."
		url="https://www.linkedin.com/in/michealengland/"
		label="Message"
	/>
	<MessagesQA />
</LandingPage>
