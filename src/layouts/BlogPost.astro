---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import BlogSchema from '../components/BlogSchema.astro'
import Layout from '../components/organisms/Layout'
import PostHeader from '../components/molecules/PostHeader/PostHeader.astro'

type Props = CollectionEntry<'tools'>;

const {
	data,
	slug
} = Astro.props;

const {
	title,
	description,
	pubDate,
	lastUpdated,
	heroImage,
	heroAlt,
} = data;
---

<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage.src}
			imageAlt={heroAlt}
		/>
		<BlogSchema
			content=""
			heroUrl={heroImage.src}
			lastUpdated={lastUpdated}
			pubDate={pubDate}
			slug={slug}
			title={title}
		/>
	</head>
	<body>
		<Layout>
			<article itemtype="https://schema.org/Article">
				<PostHeader
					heroAlt={heroAlt}
					heroImage={heroImage}
					lastUpdated={lastUpdated}
					pubDate={pubDate}
					title={title}
				/>
				<slot />
			</article>
		</Layout>
	</body>
</html>
